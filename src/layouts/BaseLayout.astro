---
import "../styles/global.css";

const { title, description, image, canonical } = Astro.props;
const siteTitle = title ? `${title} · NESDZ` : "NESDZ · Journal ULM & Aviation Ultra-Légère";
const siteDescription = description ?? "Journal et annuaire des modèles d’ULM : édito, articles, fiches techniques et vidéos.";
const ogImage = image ?? "/og.png";
const canonicalUrl = canonical ?? Astro.url;
---
<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteTitle}</title>
    <meta name="description" content={siteDescription} />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="theme-color" content="#0b0f14" />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <header class="nav">
      <div class="container nav-inner">
        <a class="brand" href="/" aria-label="Accueil NESDZ">
          <span class="logo" aria-hidden="true"></span>
          <div class="stack" style="gap:2px">
            <strong>NESDZ</strong>
            <span style="font-size:12px;color:var(--muted);margin-top:-2px;">ULM · Ultra-léger · Passion</span>
          </div>
        </a>
        <nav class="navlinks" aria-label="Navigation principale">
          <a href="/journal/">Journal</a>
          <a href="/modeles/">Annuaire ULM</a>
          <a href="/edito/">Édito</a>
          <a href="/a-propos/">À propos</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="row" style="justify-content:space-between;flex-wrap:wrap;gap:12px;">
          <small>© {new Date().getFullYear()} NESDZ — Journal ULM & Aviation ultra légère.</small>
          <small>Construit avec Astro · rapide comme une finale bien tenue.</small>
        </div>
      </div>
    </footer>
  </body>
</html>
